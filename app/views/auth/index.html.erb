<div class="container-fluid">
<%= render "layouts/navbar" %>
  <div class="card">
    <div class="card-header">
    <ul>
      <li>
        <%= link_to 'Create Role', form_role_path ,class: 'btn btn-outline-success' %>
      </li>
      <li>
        <%= link_to 'Add User', form_register_path,class: 'btn btn-outline-success'%>
      </li>
      <li>
        <h2>User</h2>
      </li>
    </ul>
    </div>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Role</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index+=1 %></td>
            <td><%= user.name %></td>
            <td><%= user.role.name %></td>
            <td>Show | Edit | Delete <td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

