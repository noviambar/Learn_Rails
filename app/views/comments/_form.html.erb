<%= form_with model: [@article, @article.comment.build] do |form| %>
  <div class="form-outline mb-4">
    <label class="form-label" for="commenter">Commenter</label>
    <% if current_user %>
      <%= form.text_field :commenter, class: 'form-control', value: current_user.name, disabled: true%>
    <% end %>
  <div>
  <div class="form-outline mb-4">
    <label class="form-label" for="body">Comment</label>
    <%= form.text_area :body, class: 'form-control' %>
  </div>
  <button class="btn btn-primary btn-lg btn-block" type="submit">Comment</button>
<% end %>