  <!-- menampilkan form login -->
  <%= form_with model: @role, url: create_post_path  do |form| %>
  <section class="vh-100" style="background-color: grey;">
    <div class="container py-5 h-100">
      <!-- menampilkan flash message -->
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <% flash.each do |key, value| %>
                <div class="alert <%= flash_class(key) %> alert-dismissible fade show text-center" role="alert">
                  <strong><%= value %></strong>
                </div>
              <% end %>
              
              <h3 class="mb-5">Create Role</h3>

              <div class="form-outline mb-4">
                <label class="form-label" for="name">Role</label>
                <%= form.text_field :name, class: "form-control" %>
              </div>

              <div class="form-outline mb-4">
								<label class="visually" for="status">Status</label>
									<%= form.select :status, [['Active', true], ['Inactive', false]]%>
							</div>

              <button class="btn btn-primary btn-lg btn-block" type="submit">Add</button>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>