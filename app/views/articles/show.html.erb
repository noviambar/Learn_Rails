<% if notice %>
  <%= notice %>
<% end %>

<%= render "layouts/navbar" %>
<div class="container-fluid">
  <div class="card">
    <div class="card-header">
      <h2><%= @article.title %></h2>
    </div>
    <div class="card-body">
      <p><%= @article.body %></p>
      <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-primary'%>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h2>Comment</h2>
        </div>
        <div class="card-body">
          <p class="small mb-0 ms-2"><%= render @article.comments %></p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h2>Add Comment</h2>
        </div>
        <div class="card-body">
          <%= render 'comments/form' %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>



