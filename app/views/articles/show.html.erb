<% if notice %>
  <%= notice %>
<% end %>

<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h2>Comments</h2>
  <%= render @article.comments %>

<h2>Add Comment:</h2>
  <%= render 'comments/form' %>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Back", root_path %></li>
</ul>



